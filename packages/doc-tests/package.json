{
  "name": "@dot-do/doc-tests",
  "version": "0.1.0",
  "description": "Self-validating documentation framework - embeds executable tests in markdown",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "documentation",
    "testing",
    "markdown",
    "mdx",
    "self-validating",
    "examples",
    "vitest"
  ],
  "author": "dot-do",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.5",
    "@babel/types": "^7.26.3",
    "gray-matter": "^4.0.3",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.6",
    "@types/node": "^22.10.6",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "vitest": "^3.0.0"
  }
}
