{
  "name": "@dot-do/ai-database",
  "version": "0.1.0",
  "description": "Unified database abstraction layer for Cloudflare D1 and Durable Objects SQLite with PayloadCMS integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters/d1": {
      "types": "./dist/adapters/d1/index.d.ts",
      "import": "./dist/adapters/d1/index.js"
    },
    "./adapters/do-sqlite": {
      "types": "./dist/adapters/do-sqlite/index.d.ts",
      "import": "./dist/adapters/do-sqlite/index.js"
    },
    "./adapters/payload": {
      "types": "./dist/adapters/payload/index.d.ts",
      "import": "./dist/adapters/payload/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "db:generate": "drizzle-kit generate",
    "db:push:d1": "drizzle-kit push:d1",
    "db:migrate": "tsx src/migrations/run.ts",
    "benchmark": "tsx benchmarks/runner.ts",
    "benchmark:lookup": "tsx benchmarks/scenarios/simple-lookup.ts",
    "benchmark:filter": "tsx benchmarks/scenarios/filtered-query.ts",
    "benchmark:bulk": "tsx benchmarks/scenarios/bulk-insert.ts",
    "benchmark:graph": "tsx benchmarks/scenarios/graph-traversal.ts"
  },
  "keywords": [
    "database",
    "cloudflare",
    "d1",
    "durable-objects",
    "sqlite",
    "drizzle",
    "payload",
    "payloadcms"
  ],
  "author": "dot-do",
  "license": "MIT",
  "dependencies": {
    "@cloudflare/workers-types": "^4.20251001.0",
    "drizzle-orm": "^0.44.6"
  },
  "devDependencies": {
    "@payloadcms/drizzle": "^3.0.0",
    "@types/node": "^24.6.1",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6",
    "typescript": "^5.5.2",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "@payloadcms/drizzle": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@payloadcms/drizzle": {
      "optional": true
    }
  }
}
